<form action="/apply" method="post" class="form-stacked">
<fieldset>
  <legend>Apply for job</legend>
  <div class="clearfix">
    <label for="f_name">Your Name</label>
    <div class="input">
      <input id="f_name" class="xlarge" name="name" type="text" placeholder="Your Name"/>
    </div>
  </div>
  <div class="clearfix">
    <label for="f_email">Your Email</label>
    <div class="input">
      <input id="f_email" class="xlarge" name="email" type="text" placeholder="Your E-Mail"/>
    </div>
  </div>
  <div class="clearfix">
    <label for="f_about">Why Parse is great fit for you?</label>
    <div class="input">
      <textarea id="f_about" class="xxlarge" name="about" rows="3"></textarea>
    </div>
  </div>
  <div class="clearfix">
    <label for="f_links">Links (URLs) to your resume, site etc. <small>(one per line)</small></label>
    <div class="input">
      <textarea id="f_links" class="xxlarge" name="links" rows="6"></textarea>
    </div>
  </div>
  <div class="actions">
    <button class="btn primary" type="submit">Apply</button>
    <a href="/" class="btn">Cancel</a>
  </div>
</fieldset>
</form>
